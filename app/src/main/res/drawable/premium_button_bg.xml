<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#43e97b"
                android:centerColor="#38f9d7"
                android:endColor="#4facfe"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#56ab2f"
                android:centerColor="#a8e6cf"
                android:endColor="#00f2fe"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>