<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_dialog_info"
        android:tint="#27AE60"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Réclamation envoyée avec succès"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txt_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre réclamation a été transmise à l'administration. Vous recevrez une réponse dans les plus brefs délais."
        android:textSize="14sp"
        android:textColor="#34495E"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/txt_reference_reclamation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Référence: REC-2024-001"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#3498DB"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_dialog_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="#3498DB"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</LinearLayout>
