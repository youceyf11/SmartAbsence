<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with status and delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txt_reclamation_titre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ProblÃ¨me de salle"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/txt_reclamation_statut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#F39C12"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/btn_delete_reclamation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Supprimer la rÃ©clamation"
                app:tint="#E74C3C" />
        </LinearLayout>

        <!-- Details -->
        <TextView
            android:id="@+id/txt_reclamation_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La salle A101 n'est pas Ã©quipÃ©e correctement pour les cours..."
            android:textSize="14sp"
            android:textColor="#34495E"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txt_reclamation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/06/2024"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ””"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txt_reclamation_priorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgente"
                android:textSize="12sp"
                android:textColor="#E74C3C"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Actions pour les rÃ©clamations en attente -->
            <LinearLayout
                android:id="@+id/layout_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_edit_reclamation"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Modifier"
                    android:textSize="10sp"
                    android:background="@android:color/transparent"
                    android:textColor="#3498DB"
                    android:paddingHorizontal="8dp"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btn_cancel_reclamation"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Annuler"
                    android:textSize="10sp"
                    android:background="@android:color/transparent"
                    android:textColor="#E74C3C"
                    android:paddingHorizontal="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
